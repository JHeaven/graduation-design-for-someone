  <body>
    


	<!-- topbar ends -->
		<div class="container-fluid" >
		<div class="row-fluid">
				
			<!-- left menu starts -->
			
			<!-- left menu ends -->
			
			<div id="content" class="span12" style="width: 100%;height: 100%;overflow: auto;">
			<!-- content starts -->
			

			<div>
				<ul class="breadcrumb">
					<li>
						<a href="#">健康知识</a> <span class="divider">/</span>
					</li>
					<li>
						<a href="#">健康知识管理</a>
					</li>
				</ul>
			</div>
			
			<div class="row-fluid sortable">		
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-user"></i> 健康知识管理</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content">
						<table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>ID</th>
								  <th>发布用户</th>
								  <th>发布时间</th>
								  <th>内容</th>
								  <th>操作</th>
							  </tr>
						  </thead>   
						  <tbody>
						  	<c:forEach items="${allNews}" var="u">
							<tr>
								<td>${u.id}</td>
								<td>${u.userName}</td>
								<td><fmt:formatDate value="${u.dateTime}" type="both"/>
								</td>
								<td>
									${u.newContent}
								</td>
								<td class="center">
									<a class="btn btn-danger" target="right" href="/FamilyHealthRecord/news-del.do?id=${u.id}">
										<i class="icon-trash icon-white" ></i> 
										删除知识
									</a>
								</td>
							</tr>
							</c:forEach>
						  </tbody>
					  </table>            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

			
			
			
			
			
    
					<!-- content ends -->
			</div><!--/#content.span10-->
				</div><!--/fluid-row-->
				
