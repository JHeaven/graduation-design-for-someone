	<script src="/CampusServicePlatform/assets/js/jquery.inputmask.bundle.min.js"></script>


	<!-- JavaScripts initializations and stuff -->
	<script src="/CampusServicePlatform/assets/js/neon-custom.js"></script>


	<!-- Demo Settings -->
	<script src="/CampusServicePlatform/assets/js/neon-demo.js"></script>

</body>
</html>