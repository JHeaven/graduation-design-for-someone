<body class="page-body login-page login-form-fall" data-url="http://neon.dev">


<!-- This is needed when you send requests via Ajax -->
<script type="text/javascript">
var baseurl = '';
</script>
	
<div class="login-container">
	
	<div class="login-header login-caret">
		
		<div class="login-content">
			
			<a href="index.html" class="logo">
				<img src="/CampusServicePlatform/assets/images/logo@2x.png" width="120" alt="" />
			</a>
			
			<p class="description">请输入新的密码</p>
			
			<!-- progress bar indicator -->
			<div class="login-progressbar-indicator">
				<h3>43%</h3>
				<span>正在重置......</span>
			</div>
		</div>
		
	</div>
	
	<div class="login-progressbar">
		<div></div>
	</div>
	
	<div class="login-form">
		
		<div class="login-content">
			
			<form method="post" role="form" id="form_forgot_password">
				
				<div class="form-forgotpassword-success">
					<i class="entypo-check"></i>
					<h3>恭喜，密码已重置</h3>
					<p>您现在可以使用新的密码来登陆系统</p>
				</div>
				
				<div class="form-steps">
					
					<div class="step current" id="step-1">
					
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
								<input class="form-control" name="userid" id="userid" value="${id}" readonly style="display:none;"/>
								<input type="text" class="form-control" name="pass1" id="pass1" placeholder="新的密码" autocomplete="off" />
								<input type="text" class="form-control" name="pass2" id="pass2" placeholder="确认密码" autocomplete="off" />
							</div>
						</div>
						
						<div class="form-group">
							<button type="submit" class="btn btn-info btn-block btn-login">
								重置密码
								<i class="entypo-right-open-mini"></i>
							</button>
						</div>
					
					</div>
					
				</div>
				
			</form>
			
			
			<div class="login-bottom-links">
				
				<a href="/CampusServicePlatform/login" class="link">
					<i class="entypo-lock"></i>
					回到登陆页面
				</a>
				
				<br />
				
				<a href="#">江苏师范大学科文学院</a>
				
			</div>
			
		</div>
		
	</div>
	
</div>


	<!-- Bottom scripts (common) -->
	<script src="/CampusServicePlatform/assets/js/gsap/main-gsap.js"></script>
	<script src="/CampusServicePlatform/assets/js/jquery-ui/js/jquery-ui-1.10.3.minimal.min.js"></script>
